# Titan-AAS AWS Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values

# ============================================
# General
# ============================================
project_name = "titan-aas"
environment  = "production"  # development, staging, production
aws_region   = "us-east-1"

# ============================================
# VPC
# ============================================
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]
private_subnets    = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnets     = ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]

# ============================================
# EKS
# ============================================
cluster_name        = "titan-aas-prod"
kubernetes_version  = "1.28"
node_instance_types = ["t3.large"]  # Use larger for production
node_capacity_type  = "ON_DEMAND"   # or "SPOT" for cost savings
node_min_size       = 3
node_max_size       = 20
node_desired_size   = 5

# ============================================
# RDS
# ============================================
db_instance_class        = "db.r6g.large"  # Use larger for production
db_allocated_storage     = 100
db_max_allocated_storage = 500

# ============================================
# ElastiCache
# ============================================
redis_node_type = "cache.r6g.large"  # Use larger for production

# ============================================
# Application
# ============================================
titan_image_repository = "ghcr.io/your-org/titan-aas"
titan_image_tag        = "v1.0.0"
domain_name            = "aas.yourdomain.com"
acm_certificate_arn    = "arn:aws:acm:us-east-1:123456789012:certificate/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
